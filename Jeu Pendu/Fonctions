from donnees import *
from random import choice

#oc√©ane
def nom_joueur():
    nom=str(input("Entrez votre nom:"))
    if len(nom)<3:
        nom=input("Entrez un nom valide svp")
        return nom_joueur
    else:
        print("Good luck",nom,"!Try to find the right word to win.")

#isaac
def lettre_recup():
    lettre_entrer=str(input("Entrer une lettre:"))
    if len(lettre_entrer)>1:
        print("Enter une lettre seulement")
        input("Entrer une nouvele lettre svp:")
    else:
        return lettre_recup
        
#mazen
def mot_a_choisir():
    choice(liste_mot)
    return mot_a_choisir
